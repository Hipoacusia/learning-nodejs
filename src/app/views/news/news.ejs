<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Mysql Mariadb Nodejs</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
</head>
<body>
  <nav class="navbar navbar-dark bg-dark">
	 <a href="#" class="navbar-brand mx-auto">NEWS</a>
  </nav> 
  <div class="container">
   <div class="row">
     <div class="col-md-6 mt-4 text-center">
    	<table class="table table-striped">
    	  <tr>
    		 <th>ID</th>
    		 <th>Tittle</th>
    		 <th>News</th>
    	  </tr>
    	  <% for(var i = 0; i < news.length; i++){ %>
    		 <tr>
    			<td><%= news[i].id_news %></td>
    			<td><%= news[i].title %></td>
    			<td><%= news[i].news %></td>
    		 </tr>
    	  <% }%>
    	</table>
     </div>
   
     <div class="col-md-4 mt-4 card">
		 <form action="/news" method="post" class="card-body">
    	  <h3 class="card-title">Add news</h3>  
    	  <div class="form-group">
			 <input id="title" type="text" name="title" class="form-control" placeholder="title">
    	  </div>
    	  <div class="form-group">
			 <input type="text" name="news" class="form-control" placeholder="news">
    	  </div>
    	  <input type="submit" class="btn btn-primary">
    	</form>
     </div>

   </div>  


   </div>

	<script>
	 document.getElementById('title').focus();
	</script>
</body>
</html>
